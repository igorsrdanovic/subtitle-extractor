# Example configuration file for subtitle-extractor
# Copy this file to ~/.subtitle-extractor.yaml or .subtitle-extractor.yaml in your project

# Languages to extract (ISO 639-1, ISO 639-2, or language names)
languages:
  - en
  - es

# Overwrite existing subtitle files
overwrite: false

# Dry run mode (preview without making changes)
dry_run: false

# Number of parallel threads (1 = sequential)
threads: 1

# Retry failed extractions up to N times (default: 0 = no retries)
# retries: 1

# Output directory for extracted subtitles
# output_dir: /path/to/subtitles

# Preserve directory structure in output directory
preserve_structure: false

# Convert all subtitles to specific format (srt or ass)
# convert_to: srt

# Subtitle sync detection (requires: pip install ffsubsync)
# check_sync: false       # report timing offset after each extraction (non-destructive)
# fix_sync: false         # detect and apply timing correction (rewrites SRT timestamps)
# sync_threshold: 0.5     # minimum offset in seconds to report/fix (default: 0.5)
